# sudoers file.
 
%sudo ALL=(root) NOPASSWD: /sbin/halt 

%sudo ALL=(root) NOPASSWD: /sbin/poweroff

%sudo ALL=(root) NOPASSWD: /sbin/reboot  

%sudo ALL=(root) NOPASSWD: /sbin/blkid "" 

%sudo ALL=(root) NOPASSWD: /sbin/fdisk.distrib 

%sudo ALL=(root) NOPASSWD: /usr/bin/ceni  

%sudo ALL=(root) NOPASSWD: /usr/local/bin/persist-config

%sudo ALL=(root) NOPASSWD: /usr/local/bin/persist-save 

%sudo ALL=(root) NOPASSWD: /usr/sbin/minstall 

%sudo ALL=(root) NOPASSWD: /usr/local/bin/connectshares.sh

%sudo ALL=(root) NOPASSWD: /usr/local/bin/disconnectshares.sh 

%sudo ALL=(root) NOPASSWD: /bin/chvt 

%sudo ALL=(root) NOPASSWD: /usr/local/bin/menu_manager.sh 

%sudo ALL=(root) NOPASSWD: /usr/sbin/pm-hibernate

%sudo ALL=(root) NOPASSWD: /usr/sbin/pm-suspend

Defaults!/usr/local/bin/menu_manager.sh env_keep += "HOME"
